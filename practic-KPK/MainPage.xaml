<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practic_KPK.MainPage" BackgroundColor="#9EB9FF">

    <StackLayout Spacing="30">
        <Frame BackgroundColor="White" CornerRadius="5">
            <Grid>
                <ImageButton Source="Menu.png" HeightRequest="30" WidthRequest="30" x:Name="MenuBTN" BackgroundColor="Transparent" Clicked="MenuBTN_Clicked" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Label FontAttributes="Bold" FontSize="20" Text="KPK74" TextColor="#233294" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>
        </Frame>
        <StackLayout Spacing="15" Padding="3,0,3,0">
            <Frame BackgroundColor="White" CornerRadius="15" >
                <StackLayout>
                    <Label Text="Заголовок новости"/>
                    
                </StackLayout>
            </Frame>
        </StackLayout>
    </StackLayout>

</ContentPage>
