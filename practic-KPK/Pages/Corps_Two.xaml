<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practic_KPK.Pages.Corps_Two">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout BackgroundColor="#9EB9FF">
            <Frame CornerRadius="5" HeightRequest="65" Margin="3,5,4,0" Padding="0">
                <Label Text="Учебный корпус, г. Копейск, пр. Ильича, 14" TextColor="Black" 
                       HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="25"/>
            </Frame>
            <Image Source="Corps_Filial_One.png" Margin="8,10,8,0"/>
                <Image Source="Corps_Filial_One_Map.png" Margin="50,0,50,0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Tap_Map2"/>
                    </Image.GestureRecognizers>
                </Image>

            <StackLayout HorizontalOptions="Center" VerticalOptions="EndAndExpand" Padding="5">
                <ImageButton Source="ButBack.png" WidthRequest="65" BackgroundColor="Transparent"
                        Clicked="But_Back"/>
            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>